{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./types",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react-jsx",
		"module": "esnext",
		"moduleResolution": "node",
		"baseUrl": "src",
		"noImplicitAny": true,
		"outDir": "dist",
		"preserveConstEnums": true,
		"target": "es6",
		"lib": [
			"es6",
			"esnext",
			"dom"
		]
	},
	"exclude": [
		"node_modules/**/*"
	],
	"include": [
		"src/**/*"
	]
}
